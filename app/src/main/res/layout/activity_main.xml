<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainActivity"
             android:background="#badaff" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:text="@string/strTitle"/>

            <Button
                android:id="@+id/btnSpotify"
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strStreamer"/>

            <Button
                android:id="@+id/btnScores"
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strScores"/>

            <Button
                android:id="@+id/btnLibrary"
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strLibrary"/>

            <Button
                android:id="@+id/btnBuildItBigger"
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strBuildBigger"/>

            <Button
                android:id="@+id/btnXYZReader"
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strXYZReader"/>

            <Button
                android:id="@+id/btnCapstone"
                style="@style/CapstoneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strCapstone"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
