<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppButton" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:width">250dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/btnColor</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CapstoneButton" parent="AppButton">
        <item name="android:background">@color/btnColorCapstone</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
